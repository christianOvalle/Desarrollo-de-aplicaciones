<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnviarMensajeWhatsappSinGuardarNumero">

    <EditText
        android:id="@+id/editTextPhoneNumeroWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Whatsap Numero"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextTextMultiLineMensajeWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Mensaje de saludo"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnEnviarMensajeWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Mensaje Whatsapp" />
</LinearLayout>