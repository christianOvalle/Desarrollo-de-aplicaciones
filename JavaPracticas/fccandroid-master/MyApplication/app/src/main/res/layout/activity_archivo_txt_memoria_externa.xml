<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ArchivoTxtMemoriaExterna">

    <EditText
        android:id="@+id/editTextArchivoTxtMemoriaExternaNombreArchivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre del archivo"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnArchivoTxtMemoriaExternaRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recuperar" />

        <Button
            android:id="@+id/btnArchivoTxtMemoriaExternaGrabar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grabar" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextArchivoTxtMemoriaExternaCuerpoArchivo"
        android:layout_width="match_parent"
        android:layout_height="442dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
</LinearLayout>